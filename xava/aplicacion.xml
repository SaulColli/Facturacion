<?xml version = "1.0" encoding = "ISO-8859-1"?><!DOCTYPE aplicacion SYSTEM "dtds/aplicacion.dtd"><aplicacion nombre="Facturar"> 		<!--	Un módulo por defecto se asume para cada	controlador en <modulo-defecto/> 	-->	<modulo-defecto>		  		<controlador nombre="Facturar" />	  	</modulo-defecto>			 <modulo nombre="PapeleraFactura">        <var-entorno nombre="XAVA_LIST_ACTION"            valor="Papelera.restaurar"/> <!-- La acción a mostrar en cada fila -->        <modelo nombre="Factura"/>        <tab nombre="Eliminado"/> <!-- Para mostrar solo las entidades borradas -->        <controlador nombre="Papelera"/> <!-- Con solo una acción: restaurar -->    </modulo>     <modulo nombre="PapeleraPedido">        <var-entorno nombre="XAVA_LIST_ACTION" valor="Papelera.restaurar"/>        <modelo nombre="Pedido"/>        <tab nombre="Eliminado"/>        <controlador nombre="Papelera"/>    </modulo> 				</aplicacion>